          <script>
            const ctx = document.getElementById('profitChart').getContext('2d');
            const myChart = new Chart(ctx, {
              type: 'line',
              data: {
                labels: ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'],
                datasets: [{
                  label: 'Daily Sales',
                  data: [1200, 1900, 300, 1500, 1200, 3000, 5000],
