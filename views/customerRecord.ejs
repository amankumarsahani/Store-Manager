<%- include('partials/header') %>
  <title>Customer Records</title>

  <style>
    .bd-placeholder-img {
      font-size: 1.125rem;
      text-anchor: middle;
      -webkit-user-select: none;
      -moz-user-select: none;
      user-select: none;
    }

    body{
        background-color: #a5afed;
        background-image: url("https://www.transparenttextures.com/patterns/batthern.png");

    }

    @media (min-width: 768px) {
      .bd-placeholder-img-lg {
        font-size: 3.5rem;
      }
    }    

    .fom{
        display: flex;
        flex-direction: column;
    }

    .c-box{
        display: flex;
        flex-direction: column;
    }

    .b-body{
        width: 80%;
        background-color: #fff;
    }

    .detail{
        height: 50px;
        border: none;
        box-shadow: 2px 2px 5px #bbb;
    }

    h3{
        width: 360px;
        margin: auto;
        background-color: #112559;
        height: 50px;
        padding-top: 5px;
        color: #fff;
        text-align: center;
        border: none;
    }

    p{
        font-size: 30px;
        color: #112559;
        text-align: center;
        font-weight: bold;
    }

    .footer{
        position: fixed;
        bottom: 0%;
        background-color: #112559;
        height: 50px;
    }

    #totalbox{
        border: none;
        width: 300px;
        height: 30px;
        box-shadow: 2px 2px 3px rgb(145, 142, 237);
        position: relative;
        top: 2px;
        left: 5px;
        border-radius: 3px;
    }

    .lBox{
        color: #fff;
    }

    .cr{
        border-bottom: 2px solid #112559;
    }
  </style>

  </head>

  <body >

    <header>
      <nav class="navbar navbar-expand-md navbar-dark bg" style="background-color: #112559;">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Smart Manager</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
            aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav me-auto mb-2 mb-md-0">
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/dashboard">Dashboard</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/dashboard/bill">Billing</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/logout">Sign Out</a>
              </li>

            </ul>
          </div>
        </div>
      </nav>
    </header>



    <div class="b-body my-5 container py-1" style="border:none;box-shadow: 5px 5px 10px #112559;">
        <h1 class="fw-bold cr">Customers Records : </h1>
        <div class="table-responsive">
            <table class="table table-striped table-xl">
              <thead>
                <tr>
                  <th scope="col">S.No.</th>
                  <th scope="col">Customer Name</th>
                  <th scope="col">Address</th>
                  <th scope="col">Mobile No.</th>
                  <th scope="col">Total Amount</th>
                  <th scope="col">Payment</th>
    
                </tr>
              </thead>
              <tbody>
                <% newCustomer.forEach(function(item,i){ %>

                    <tr>
                      <td><%- i+1 %></td>
                      <td><%- item.cname %></td>
                      <td><%- item.caddress %></td>
                      <td><%- item.cnumber %></td>
                      <td><%- item.cAmount %> </td>
                      <td>Paid   <img src="https://cdn-icons-png.flaticon.com/512/190/190411.png" height="20px" width="20px"></td>
                    </tr>
              <% }) %>
              </tbody>
            </table>
          </div>
    </div>
    <div class="footer container-fluid">
        <div class="d-flex justify-content-end mx-2 my-2">
            <label class="lBox fw-bold mt-1 mx-2" for="totalbox">Total Revenue : </label>
            <input id="totalbox" type="text" placeholder="00.00" value=<%- revenue %> >
        </div>
    </div>


    <%-include('partials/footer')%>