<%- include('partials/header') %>
  <title>Customer <Details></Details></title>

  <style>
    .bd-placeholder-img {
      font-size: 1.125rem;
      text-anchor: middle;
      -webkit-user-select: none;
      -moz-user-select: none;
      user-select: none;
    }

    body{
        background-color: #a5afed;
        background-image: url("https://www.transparenttextures.com/patterns/batthern.png");
    }

    @media (min-width: 768px) {
      .bd-placeholder-img-lg {
        font-size: 3.5rem;
      }
    }    

    .fom{
        display: flex;
        flex-direction: column;
    }

    .c-box{
        display: flex;
        flex-direction: column;
    }

    .b-body{
        width: 50%;
    }

    .detail{
        height: 50px;
        border: none;
        box-shadow: 2px 2px 5px #bbb;
    }

    h3{
        width: 360px;
        margin: auto;
        background-color: #112559;
        height: 50px;
        padding-top: 5px;
        color: #fff;
        text-align: center;
        border: none;
    }

    p{
        font-size: 30px;
        color: #112559;
        text-align: center;
        font-weight: bold;
    }
  </style>

  </head>

  <body>

    <header>
      <nav class="navbar navbar-expand-md navbar-dark bg" style="background-color: #112559;">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Smart Manager</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
            aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav me-auto mb-2 mb-md-0">
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/dashboard">Dashboard</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/dashboard/bill">Billing</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/logout">Sign Out</a>
              </li>
              
            </ul>
            <form class="d-flex my-2">
              <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-primary" type="submit">Search</button>
            </form>
          </div>
        </div>
      </nav>
    </header>



    <div class="b-body mt-5 container py-1" style="border:none;box-shadow: 5px 5px 10px #112559;background-color: #fff;">
      
      <form action="/dashboard/bill/cxDetail/payment" method="post" style="margin-bottom: 5px;">
        <div class="fom container my-4 justify-content-center">
          <h3 class="fom-tit mb-2">Customer Details</h3>
          <div class="c-box" style="padding: 5px;">
            <input class="detail my-2" type="text" placeholder="Customer Name" autocomplete="off" name="cName" value="">
            <input class="detail my-2" type="text" placeholder="Address" value="" autocomplete="off" name="cAddress">

            <input class="detail my-2" type="text" placeholder="Mobile No." autocomplete="off" value="" name="cNumber">
            <input class="detail my-2" type="text" placeholder="Email" autocomplete="off" value="" name="cemail">
            <p class="mt-2">Total Amount : <%- totalAmount %></p>
        </div>
        <div>
          <table class="table table-striped table-xl text-center">
            <thead>
              <tr>
                <th scope="col">S.No.</th>
                <th scope="col">Product Name</th>
                <th scope="col">Quantity</th>
                <th scope="col">Price</th>
                <th scope="col">Total Amount/Qty</th>
                <th scope="col">Payment</th>
  
              </tr>
            </thead>
            <tbody >
              <% newBProduct.forEach(function(item,i){ %>
                  <tr>
                    <td><%- i+1 %></td>
                    <td><%- item.bname %></td>
                    <td><%- item.bquantity %></td>
                    <td><%- item.bprice %></td>
                    <td><%- item.btotal %> </td>
                    <td>Pending   <img src="https://cdn-icons-png.flaticon.com/512/2972/2972543.png" height="20px" width="20px"></td>
                  </tr>
            <% }) %>
            </tbody>
          </table>
        </div class="d-flex justify-content-center">
          <button class="btn btn-primary btn-lg" type="submit" value="pay" name="pdf">Pay Now</button>
          <button class="btn btn-primary btn-lg mt-2" type="submit" value="pdf" name="pdf"  >Bill-PDF</button>
        </div>
      </form>
    </div>


    <%-include('partials/footer')%>