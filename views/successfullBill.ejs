<%- include('partials/header') %>
  <title>Bill Pdf</title>

  <style>
    .bd-placeholder-img {
      font-size: 1.125rem;
      text-anchor: middle;
      -webkit-user-select: none;
      -moz-user-select: none;
      user-select: none;
    }

    body{
        background-color: #a5afed;
        background-image: url("https://www.transparenttextures.com/patterns/batthern.png");
    }

    .bod{
      border: 5px solid #112559;
    }
    @media (min-width: 768px) {
      .bd-placeholder-img-lg {
        font-size: 3.5rem;
      }
    }    

    .fom{
        display: flex;
        flex-direction: column;
    }

    .c-box{
        display: flex;
        flex-direction: column;
    }

    .b-body{
        width: 50%;
    }

    .detail{
        height: 50px;
        border: none;
        box-shadow: 2px 2px 5px #bbb;
    }

    h3{
        width: 360px;
        margin: auto;
        background-color: #112559;
        height: 50px;
        padding-top: 5px;
        color: #fff;
        text-align: center;
        border: none;
    }

    p{
        font-size: 30px;
        color: #112559;
        text-align: center;
        font-weight: bold;
    }
  </style>

  </head>

  <body>

    <header>
      <nav class="navbar navbar-expand-md navbar-dark bg" style="background-color: #112559;">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Smart Manager</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
            aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav me-auto mb-2 mb-md-0">
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/dashboard">Dashboard</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/dashboard/bill">Billing</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/logout">Sign Out</a>
              </li>
              
            </ul>
            <form class="d-flex my-2">
              <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-primary" type="submit">Search</button>
            </form>
          </div>
        </div>
      </nav>
    </header>



    <div class="b-body mt-5 container py-1" id="pd" style="border:none;box-shadow: 5px 5px 10px #112559;background-color: #fff;">
      
      <form action="/dashboard" method="post" style="margin-bottom: 5px;">
        <h3 class="fom-tit mb-2">Bill Invoice</h3>
            <table class="table table-striped table-xl text-center my-2 bod" style="font-size: 17px;font-weight:bold">
                <tbody  class="text-center ">
                      <tr class="">
                        <td class="bod">Customer Name : </td>
                        <td class="bod"><%- customer.cname %></td>
                    </tr>
                    <tr>
                        <td class="bod">Address : </td>
                        <td class="bod"><%- customer.caddress %></td>
                    </tr>
                    <tr>
                        <td class="bod">Mobile No. : </td>
                        <td class="bod"><%- customer.cnumber %></td>
                    </tr>
                    <tr>
                        <td class="bod">Email Address : </td>
                        <td class="bod"><%- customer.cnumber %></td>
                    </tr>
                </tbody>
              </table>
              <div class="d-flex justify-content-center my-2">
                <button class="btn btn-primary btn-lg" type="submit" value="pay" name="pdf" >Thank You For The Purchase</button>
              </div>
              
          <table class="table table-striped table-xl text-center">
            <thead>
              <tr>
                <th scope="col">S.No.</th>
                <th scope="col">Product Name</th>
                <th scope="col">Quantity</th>
                <th scope="col">Price</th>
                <th scope="col">Total Amount/Qty</th>
                <th scope="col">Payment</th>
  
              </tr>
            </thead>
            <tbody >
              <% newBProduct.forEach(function(item,i){ %>
                  <tr>
                    <td><%- i+1 %></td>
                    <td><%- item.bname %></td>
                    <td><%- item.bquantity %></td>
                    <td><%- item.bprice %></td>
                    <td><%- item.btotal %> </td>
                    <td>Successful   <img src="https://cdn-icons-png.flaticon.com/512/190/190411.png" height="20px" width="20px"></td>
                  </tr>
            <% }) %>
            </tbody>
          </table>
          </div>
          <div>
            
          </div>
            
            
        </form>
    </div>


    <%-include('partials/footer')%>